{
  "name": "claude-bot",
  "version": "1.0.0",
  "description": "Remote control for Claude Code via Telegram",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "pm2": "pm2 start ecosystem.config.cjs",
    "pm2:stop": "pm2 stop claude-bot",
    "pm2:logs": "pm2 logs claude-bot",
    "send": "tsx src/send.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/floatrx/claude-bot.git"
  },
  "keywords": [
    "telegram",
    "claude",
    "bot",
    "tmux"
  ],
  "author": "floatrx",
  "license": "MIT",
  "dependencies": {
    "@types/node": "^25.1.0",
    "@types/node-telegram-bot-api": "^0.64.13",
    "dotenv": "^17.2.3",
    "node-telegram-bot-api": "^0.67.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  }
}
