{
  "name": "claude-bot",
  "version": "1.0.0",
  "description": "Remote control for Claude Code via Telegram",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "pm2": "pm2 start ecosystem.config.cjs",
    "pm2:stop": "pm2 stop claude-bot",
    "pm2:logs": "pm2 logs claude-bot",
    "send": "tsx src/send.ts",
    "lint": "eslint . --fix",
    "pretty": "prettier --write .",
    "prepare": "husky"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/floatrx/claude-bot.git"
  },
  "keywords": [
    "telegram",
    "claude",
    "bot",
    "tmux"
  ],
  "author": "floatrx",
  "license": "MIT",
  "dependencies": {
    "dotenv": "^17.2.4",
    "node-telegram-bot-api": "^0.67.0"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@types/node": "^25.2.2",
    "@types/node-telegram-bot-api": "^0.64.13",
    "eslint": "^10.0.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "globals": "^17.3.0",
    "husky": "^9.1.7",
    "prettier": "^3.8.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0"
  }
}
